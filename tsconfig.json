{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
    },
    "types": [
      "node",
      "lodash",
      "async"
    ],
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": [
      "es2015",
      "es2016"
    ]
  },
  "compileOnSave": false,
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}