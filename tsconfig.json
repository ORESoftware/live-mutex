{
  "compilerOptions": {
    "strict": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "target": "es2020",
    "rootDir": "src",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": false,
    "lib": [
      "es2019",
      "es2020",
      "es2021",
      "es2022"
    ]
  },
  "compileOnSave": false,
  "include": [
    "src"
  ]
}
