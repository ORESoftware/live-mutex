{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "types": [
      "node",
      "lodash",
      "async",
      "core-js"
    ],
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": [
      "es2015",
      "es2016"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "test",
    "node_modules"
  ]
}